<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
        android:background="@drawable/background1"
        tools:context="com.example.justjava.teatypes"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider">

    <Button
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:text="Green Tea - \u20B950"
        android:layout_marginTop="100dp"
        android:id="@+id/button1"
        android:background="#80FFFFFF"
        android:onClick="gtOrder"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="Black Tea - \u20B930"
        android:id="@+id/button2"
        android:layout_gravity="center"
        android:background="#80FFFFFF"
        android:onClick="btOrder"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="Herbal Tea - \u20B950"
        android:id="@+id/button3"
        android:layout_gravity="center"
        android:background="#80FFFFFF"
        android:onClick="htOrder"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="Chamomile Tea - \u20B980"
        android:id="@+id/button4"
        android:layout_gravity="center"
        android:background="#80FFFFFF"
        android:onClick="ctOrder"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="Tandoori Tea - \u20B9100"
        android:id="@+id/button5"
        android:layout_gravity="center"
        android:background="#80FFFFFF"
        android:onClick="ttOrder"/>

</LinearLayout>